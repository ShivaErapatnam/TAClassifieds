@model TAClassifieds.Models.DAL.TAC_User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <div class="logincontainer">
        <label>Create an Account:</label>
        @using (Html.BeginForm("Register", "Register", FormMethod.Post, new { @class = "form-horizontal form-signin form-margin" }))
        {
            <div class="form-group">
                @Html.LabelFor(x => x.First_Name, new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(x => x.First_Name, new { @class = "form-control", placeholder = "Enter your email id", name = "email", id = "email" })
                    @Html.ValidationMessageFor(x => x.First_Name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Last_Name, new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(x => x.Last_Name, new { @class = "form-control", placeholder = "Enter your email id", name = "email", id = "email" })
                    @Html.ValidationMessageFor(x => x.Last_Name)
                </div>
            </div>
          
            <div class="form-group">
                @Html.LabelFor(x => x.Email, new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Enter your email id", name = "email", id = "email" })
                    @Html.ValidationMessageFor(x=>x.Email)
                </div>
            </div>

            <div class="form-group">

                @Html.LabelFor(x => x.UPassword, new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    @Html.PasswordFor(x => x.UPassword, new { @class = "form-control", placeholder = "Enter your Password", name = "pwd", id = "pwd" })
                    @Html.ValidationMessageFor(x => x.UPassword)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.RepeatPassword, new { @class = "control-label col-sm-4" })

                <div class="col-sm-6">
                    @Html.PasswordFor(x => x.RepeatPassword, new { @class = "form-control", placeholder = "Repeat your password", name = "repeatpwd", id = "repeatpwd" })
                    @Html.ValidationMessageFor(x => x.RepeatPassword)

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Address1, new { @class = "control-label col-sm-4" })

                <div class="col-sm-6">
                    @Html.PasswordFor(x => x.Address1, new { @class = "form-control", placeholder = "Enter Your Address" })
                    @Html.ValidationMessageFor(x => x.Address1)

                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-10">
                    <div class="checkbox" id="terms" name="terms">
                        @Html.CheckBoxFor(m => m.TermsAndConditions)
                        @Html.LabelFor(m => m.TermsAndConditions)
                        @Html.ValidationMessageFor(x => x.TermsAndConditions)

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-12">
                    <input type="submit" value="Create" class="btn btn-md btn-primary" id="create-btn"/>
                </div>
            </div>
        }
        @ViewBag.ErrorMessage
    </div>
</div>
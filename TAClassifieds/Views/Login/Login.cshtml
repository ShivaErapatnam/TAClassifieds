@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewBag.Title = "Login Page";
}
@model TAClassifieds.Models.LoginModel
<div class="row">
    <div class="logincontainer">
        Log In :
        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal form-signin form-margin", @role = "form", @name = "emailLogin" }))
        {
            <div class="form-group">
                @Html.LabelFor(x => x.Email, new { @class = "control-label col-sm-4", @for = "email" })
                <div class="col-sm-6">
                    @if (Model == null)
                    {
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "email", name = "email", placeholder = "Enter your email id", required = "required" })
                    }
                    else
                    {
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "email", name = "email", placeholder = "Enter your email id", required = "required", value = @Model.Email })
                    }
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.UPassword, new { @class = "control-label col-sm-4", @for = "pwd" })
                <div class="col-sm-6">
                    @if (Model == null)
                    {
                        @Html.PasswordFor(x => x.UPassword, new { @class = "form-control", @id = "pwd", @name = "pwd", @placeholder = "Enter password" })
                    }
                    else
                    {
                        @Html.PasswordFor(x => x.UPassword, new { @class = "form-control", @id = "pwd", @name = "pwd", @placeholder = "Enter password", value = @Model.UPassword })
                    }
                    @Html.ValidationMessageFor(x => x.UPassword)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-10">
                    <div class="checkbox">
                        @if (Model == null)
                        {
                            @Html.CheckBoxFor(m => m.RememberMe)

                        }
                        else
                        {
                            @Html.CheckBox("RememberMe", true)
                        }
                        @Html.LabelFor(x => x.RememberMe)
                    </div>
                </div>
            </div>

            <center>
                @if (Model != null)
                {
                    @ViewBag.Message;
                }
            </center>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-12">
                    <button id="login-btn" type="submit" class="btn btn-default btn-success">Log in</button>
                    @Html.ActionLink("Register Here", "Register", "Register", null, new { @class = "btn btn-default btn-warning", id = "register-btn" })
                </div>
            </div>
        }

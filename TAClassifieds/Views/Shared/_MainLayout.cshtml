<!DOCTYPE html>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<html>

<head>
    <title>@ViewBag.Title - TAC</title>
    <link href="@Url.Content("~/Resources/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Resources/css/bootstrap-theme.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Resources/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Resources/css/classifiedStyles.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Resources/css/jquery-ui.css")" rel="stylesheet" type="text/css" />
 
</head>

<body>
    <div class="container">
        <div class="jumbotron">
            <div class="col-sm-4 col-lg-4 col-xs-10">
                <img src="../Resources/images/company_logo.png" class="img-responsive">
                <!--<img src="../Code/images/logo.png" width="585" height="150"> -->
            </div>
            <div class="col-sm-6 col-lg-2 col-xs-4 hidden-xs pull-right header-div">
                <h2 class="title">Classifieds</h2>
            </div>
        </div>
        <!-- Nav bar tabs -->
        <nav class="navbar navbar-default" role="navigation">
            <div class="navbar-header mynav">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand visible-xs title" href="#">Classifieds </a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav nav-right">
                    <li class="active">
                        <a href="home.html"><span class="glyphicon glyphicon-home" /> Home</a>
                    </li>
                    <li>
                        <a href="postad.html"><span class="glyphicon glyphicon-tasks alt" /> Post Ad</a>
                    </li>
                    <li><a href="login.html"><span class="glyphicon glyphicon-user"> Login</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="myaccount.html"><span class="glyphicon glyphicon-user" /> MyAccount</a>
                    </li>
                    <li>
                        <a href="contactus.html"><span class="glyphicon glyphicon-earphone" /> Contact Us</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="row">
            <label class="col-sm-offset-1 col-sm-4">
                <h4>View Ads in:</h4>
            </label>
            <div class="col-sm-10 col-sm-offset-1 ">
                <div class="col-sm-3">
                    <a href="#">
                        <img src="../Resources/images/electronics.jpg" class="image-box" width="180px" height="150px" id="Electronics" />
                    </a>
                    <h4 class="col-sm-offset-2">Electronics</h4>
                </div>
                <div class="col-sm-3">
                    <a href="#">
                        <img src="../Resources/images/smart_phones_new.jpg" class="image-box" width="180px" height="150px" id="MobilePhones" />
                    </a>
                    <h4 class="col-sm-offset-2">Mobile Phones</h4>
                </div>
                <div class="col-sm-3">
                    <a href="#">
                        <img src="../Resources/images/house_rent.jpg" class="image-box" width="180px" height="150px" id="Rental" />
                    </a>
                    <h4 class="col-sm-offset-2">House Rental</h4>
                </div>
                <div class="col-sm-3">
                    <a href="#">
                        <img src="../Resources/images/car1.jpg" class="image-box" width="180px" height="150px" id="Automobiles" />
                    </a>
                    <h4 class="col-sm-offset-2">Automobiles</h4>
                </div>
            </div>

        </div>
        @RenderBody()
    </div>
    <footer class="container text-center">
        <p>2016 @@Techaspect Solutions</p>
    </footer>  
    <script src="@Url.Content("~/Code/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Code/js/jquery.min.js")"></script> 
    <script>
        $(document).ready(function () {
            $(".image-box").on("click", function (event) {
                var selected = "#" + $(this).attr("id");
                $(selected).toggleClass("image-selected");
                $('.image-box').not(this).removeClass('image-selected');
                $(".category").text($(this).attr("id"));
            });
        });
    </script>
</body>


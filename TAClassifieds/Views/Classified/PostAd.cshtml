@model TAClassifieds.Models.PostAdModel
@{Layout = "~/Views/Shared/_MainLayout.cshtml";}

<div class="row">
    <label class="col-sm-offset-1 col-sm-4">
        <h4>Post Ads in:</h4>
    </label>
   
    @Html.Action("CategoriesList", "Classified");
</div>
<div class="row">
    <div class="logincontainer" id="post-ad-form">
        <h4><label>Post an ad for: <span class="category"></span></label></h4>
        @*<p style="color:red;font:500;">
            @Html.ValidationSummary();
        </p>*@
        @using (Html.BeginForm("PostAd", "Classified", FormMethod.Post, new { enctype = "multipart/form-data",@class= "form-horizontal form-signin form-margin" }))
        {   @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(model => model.Classified.CategoryId, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    <p class="form-control"><span class="category"></span></p>                    
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Classified.ClassifiedTitle, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.Classified.ClassifiedTitle, new { htmlAttributes = new { @class = "form-control", @placeholder = "Give the title for your ad here"} })
                    @Html.ValidationMessageFor(model => model.Classified.ClassifiedTitle, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Classified.Description, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    @Html.TextAreaFor(model => model.Classified.Description, htmlAttributes: new { @class = "form-control", @maxlength = "600", @placeholder = "Give a brief description for your ad here" })
                    @Html.ValidationMessageFor(model => model.Classified.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Classified.ClassifiedImage, htmlAttributes: new { @class = "control-label col-sm-4" })
                @Html.ValidationMessageFor(model =>model.Classified.ClassifiedImage, "", new { @class = "text-danger" })
                <div class="col-xs-6">
                    <input type="file" name="file" id="uploadPic" accept=".img"/>
                </div>
            </div>
            <hr>
            <h4><label class="col-sm-12 col-xs-12">Your Contact Details:</label></h4>
            <div class="form-group ">
                @Html.LabelFor(model => model.User.ContactName, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-xs-6">
                    @Html.TextBoxFor(model => model.User.ContactName, htmlAttributes: new { @class = "form-control", @placeholder = "Enter your name here"})
                    @Html.ValidationMessageFor(model => model.User.ContactName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.User.ContactPhone, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-xs-6">
                    @Html.TextBoxFor(model => model.User.ContactPhone,htmlAttributes: new{ @class = "form-control", @placeholder = "Enter your mobile number here" })
                    @Html.ValidationMessageFor(model =>model.User.ContactPhone, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.User.ContactCity, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-xs-6">
                    @Html.TextBoxFor(model => model.User.ContactCity, htmlAttributes: new { @class = "form-control", @placeholder = "Enter your city here" })
                    @Html.ValidationMessageFor(model => model.User.ContactCity, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Classified.ClassifiedPrice, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-xs-6">
                    @Html.TextBoxFor(model => model.Classified.ClassifiedPrice, htmlAttributes: new { @class = "form-control", @placeholder = "Rs." })
                    @Html.ValidationMessageFor(model => model.Classified.ClassifiedPrice, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-12">
                    <input type="submit" id="create-btn" class="btn btn-default btn-success" value="Post Ad" />
                </div>
            </div>
        }
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>
